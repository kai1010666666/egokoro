<div class="container">
  <div class="row">
    <h4>タグ詳細</h4>
  </div>
  <div class="row">
    <%= link_to 'タグ一覧', admin_tags_path, class:"btn btn-secondary" %>
  </div>
  <div class="row">
    <h4>タグ名</h4>
  </div>
  <div class="row">
    <%# タグ名 %>
    <h5><%= @tag.name %></h5>
  </div>
  <div>
    <ul>
      <% @tag.illustrations.each do |illustration| %>
        <li>
          <%= link_to illustration.title, admin_illustration_path(illustration) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>