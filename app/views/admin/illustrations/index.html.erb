<div class="container">
  <div class="row">
    <h4>イラスト一覧</h4>
  </div>
  <%= link_to 'タグ一覧', admin_tags_path, class:"btn btn-secondary" %>
  <div class="row">
    <% @illustrations.each do |illustration| %>
      <div class="col-3 text-center">
        <%= link_to admin_illustration_path(illustration.id),data: {"turbolinks"=>false} do %>
          <%= image_tag illustration.get_image(150,150) %>
          <div><%= illustration.title %></div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%= paginate @illustrations, theme: 'bootstrap-5'  %>