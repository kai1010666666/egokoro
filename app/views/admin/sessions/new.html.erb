<div class="text-center">
  <h4>管理人ログイン</h4>
  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, :placeholder=>"メールアドレス", autofocus: true, autocomplete: "email" %>
    </div>
    <br>
    <div class="field">
      <%= f.password_field :password, :placeholder=>"パスワード", autocomplete: "current-password" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-info" %>
    </div>
  <% end %>
  <%= render "admin/shared/links" %>
</div>

