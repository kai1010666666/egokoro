<div class="container">
  <div class="row">
    <div class="col">
      <div><%= image_tag @account.get_profile_image(100,100) %></div>
      <div><%= @account.name %></div>
      <% @illustrations.each do |illustration| %>
        <%= link_to admin_illustration_path(illustration.id) do %>
          <%= image_tag illustration.get_image(200,200) %></td>
        <% end %>
        <table>
          <tbody>
            <tr>
              <th>タイトル</th>
              <th>説明</th>
              <th>コメント</th>
            </tr>
            <tr>
              <td>
                <%= link_to admin_illustration_path(illustration.id) do %>
                  <%= illustration.title %>
                <% end %>
              </td>
              <td><%= illustration.introduction %></td>
              <td><%= link_to "#{illustration.comments.count} コメント", admin_illustration_path(illustration.id) %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>