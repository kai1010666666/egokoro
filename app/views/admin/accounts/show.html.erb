<div class="container">
  <div class="row">
    <div class="col">
      <div><%= image_tag @account.get_profile_image(100,100) %></div>
      <div><%= @account.name %></div>
      <% @illustrations.each do |illustration| %>
        <%= link_to admin_illustration_path(illustration.id),data: {"turbolinks"=>false} do %>
          <%= image_tag illustration.get_image(200,200) %></td>
        <% end %>
        <br>
        <table>
          <tr>
            <th>タイトル</th>
            <th>コメント</th>
          </tr>
          <tr>
            <td>
              <%= link_to admin_illustration_path(illustration.id),data: {"turbolinks"=>false} do %>
                <%= illustration.title %>
              <% end %>
            </td>
            <td><%= link_to "#{illustration.comments.count} コメント", admin_illustration_path(illustration.id),data: {"turbolinks"=>false} %></td>
          </tr>
        </table>
      <% end %>
      <%= paginate @illustrations, theme: 'bootstrap-5'  %>
    </div>
  </div>
</div>