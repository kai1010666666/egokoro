<div class="container">
  <div class="row">
    <div class="col">
      <div><%= image_tag @account.get_profile_image(100,100) %></div>
      <div><%= @account.name %></div>
      <% @illustrations.each do |illustration| %>
        <%= link_to illustration_path(illustration.id),data: {"turbolinks"=>false} do %>
          <%= image_tag illustration.get_image(200,200) %></td>
        <% end %>
        <table>
          <tbody>
            <tr>
              <th>タイトル</th>
              <th>説明</th>
              <th>コメント</th>
            </tr>
            <tr>
              <td>
                <%= link_to illustration_path(illustration.id),data: {"turbolinks"=>false} do %>
                  <%= illustration.title %>
                <% end %>
              </td>
              <td><%= illustration.introduction %></td>
              <td><%= link_to "#{illustration.comments.count} コメント", illustration_path(illustration.id),data: {"turbolinks"=>false} %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    <table>
      <h4>ブックマーク一覧</h4>
      <thead>
        <tr>
          <th>投稿者名</th>
          <th>イラスト</th>
          <th>タイトル</th>
        </tr>
      </thead>
      <tbody>
        <% @favorites.each do |favorite| %>
          <tr>
              <td>
                <%= link_to illustration_path(favorite.illustration),data: {"turbolinks"=>false} do %>
                  <%= favorite.illustration.account.name %>
                <% end %>
              </td>
              <td>
                <%= link_to illustration_path(favorite.illustration),data: {"turbolinks"=>false} do %>
                  <%= image_tag favorite.illustration.get_image(100,100) %>
                <% end %>
              </td>
              <td>
                <%= link_to illustration_path(favorite.illustration),data: {"turbolinks"=>false} do %>
                  <%= favorite.illustration.title %>
                <% end %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if @account == current_account %>
      <%= link_to "編集する" , edit_account_path(@account.id),class:"btn btn-success" %>
    <% end %>
    </div>
  </div>
</div>