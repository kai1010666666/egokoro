<div class="container">
  <div class="row">
    <div class="col">
          <div><%= image_tag @account.get_profile_image(100,100) %></div>
          <div><%= @account.name %></div>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>説明</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @illustrations.each do |illustration| %>
            <tr>
              <td>
                <%= link_to illustration_path(illustration.id) do %>
                  <%= image_tag illustration.get_image(200,200) %></td>
                <% end %>
              <td>
                <%= link_to illustration_path(illustration.id) do %>
                  <%= illustration.title %>
                <% end %>
              </td>
              <td><%= illustration.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= link_to "編集する" , edit_account_path(@account.id) %>
      
    </div>
    <% @illustrations.each do |illustration| %>
    <p><%= link_to "#{illustration.comments.count} コメント", illustration_path(illustration.id) %></p>
    <% end %>
  </div>