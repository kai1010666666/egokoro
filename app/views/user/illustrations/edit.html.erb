<div class="container">
    <h4>イラスト編集</h4>
    <div class="row">
        <%= form_with model: @illustration, url: illustration_path(@illustration.id), method: :patch do |f| %>
        <div class="row">
          <h5>イラスト</h5>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="row">
          <h5>タイトル名</h5>
          <%= f.text_field :title %>
        </div>
        <div class="row">
          <h5>説明</h5>
          <%= f.text_area :introduction %>
        </div>
        <div class="text-center">
          <%= f.submit '変更を保存',class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
</div>