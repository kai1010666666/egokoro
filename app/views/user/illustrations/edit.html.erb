<div class="container">
  <div class="row">
    <div class="col">
      <h4>イラスト編集</h4>
      <% if @illustration.errors.any? %>
        <%= @illustration.errors.count %>件のエラーが発生しました
        <ul>
          <% @illustration.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @illustration, url: illustration_path(@illustration.id), method: :patch do |illustration| %>
        <%= render 'form', illustration: illustration %>
        <div class="row">
          <h5>非公開</h5>
          <%= illustration.check_box :is_draft, {}, checked_value='true', unchecked_value='false' %>
        </div>
        <div class="text-center">
          <%= illustration.submit '変更を保存',class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>